<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd" name="total_invoiced_month" pageWidth="540" pageHeight="802" columnWidth="540" leftMargin="0" rightMargin="0" topMargin="0" bottomMargin="0">
	<property name="ireport.zoom" value="1.5"/>
	<property name="ireport.x" value="0"/>
	<property name="ireport.y" value="0"/>
	<parameter name="entityId" class="java.lang.Integer"/>
	<parameter name="startDate" class="java.util.Date"/>
	<parameter name="endDate" class="java.util.Date"/>
	<queryString>
		<![CDATA[select
              sum(i.total) as total,
              count(i.id) as count,
              to_char(i.create_datetime, 'MM') as month_of_year,
              to_char(i.create_datetime, 'Month') as month,
              to_char(i.create_datetime, 'yyyy') as year
            from
              invoice i
              inner join base_user u on i.user_id = u.id
            where
              u.entity_id = $P{entityId}
              and i.deleted = 0
              and i.is_review = 0
              and i.create_datetime >= $P{startDate}
              and i.create_datetime <= $P{endDate}
            group by month_of_year, month, year
            order by year, month_of_year]]>
	</queryString>
	<field name="total" class="java.math.BigDecimal"/>
	<field name="count" class="java.lang.Long"/>
	<field name="month_of_year" class="java.lang.String"/>
	<field name="month" class="java.lang.String"/>
	<field name="year" class="java.lang.String"/>
	<variable name="subtotal" class="java.math.BigDecimal" calculation="Sum">
		<variableExpression><![CDATA[$F{total}]]></variableExpression>
		<initialValueExpression><![CDATA[new BigDecimal("0.00")]]></initialValueExpression>
	</variable>
